<h1>Recipe details: <%= @recipe.name %></h1>

<ul>
  <% @ingredients.each() do |ingredient| %>
  <li><a href="/ingredient/<%=ingredient.id()%>" id="<%=ingredient.id()%>"><%= ingredient.name() %></a></li>
  <% end %>
</ul>

<form action="/recipe/<%=@recipe.id%>" method="post">
  <div class="form-group">
    <label for="name">Add a ingredient:</label>
    <input type="text" name="name" id="name" class="form-control">
  </div>
  <button type="submit" id="add_ingredient" class="btn btn-primary">Add</button>
</form>

<br>

<%= @message %>

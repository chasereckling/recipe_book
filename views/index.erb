<h1>Welcome to Recipe Box!</h1>

<form action="/recipes" method="get">
  <button id="recipes" class='btn btn-primary'>See Recipes</button>
</form>
<br>
<form action="/categories" method="get">
  <button id="categories" class='btn btn-primary'>See Categories</button>
</form>

<h3>Ingredients Index:</h3>

<ul>
  <% Ingredient.all().each() do |ingredient| %>
  <li><a href="/ingredient/<%=ingredient.id%>" id="<%=ingredient.id%>"><%=ingredient.name%></a></li>
  <% end %>
</ul>
